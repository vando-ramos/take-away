<h1 class='title'><%= PriceHistory.model_name.human(count: 1) %></h1>

<% if @grouped_price_histories.present? %>
  <% @grouped_price_histories.each do |option, price_histories| %>
    
    <h2><%= option.description %></h2>

    <div class='history-price-table'>
      <table>
        <thead>
          <tr>
            <th><%= t('activerecord.attributes.price_history.price') %></th>
            <th><%= t('views.from') %></th>
            <th><%= t('views.to') %></th>
          </tr>
        </thead>
        <tbody>
          <% price_histories.each do |price_history| %>
            <tr>
              <td><%= number_to_currency(price_history.price) %></td>
              <td><%= price_history.start_date.strftime("%d/%m/%Y %H:%M") %></td>
              <td><%= price_history.end_date.strftime("%d/%m/%Y %H:%M") %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
<% else %>
  <p><%= t('messages.no_price_history_registered') %></p>
<% end %>
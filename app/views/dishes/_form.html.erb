<div class='form-container'>
  <%= form_with model: @dish do |f| %>
    <div class='form-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class='form-group'>
      <%= f.label :calories %>
      <%= f.text_field :calories %>
    </div>
    <div class='form-group'>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class='form-group'>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div> 
    <div class="checkbox-section">
      <%= f.label :tags, Tag.model_name.human(count: 2) %>
      <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name do |box| %>
        <div>
          <%= box.check_box %>
          <%= box.label %>
        </div>
      <% end %>
    </div>
    <div>
      <%= f.submit class: 'submit-button' %>
    </div>
  <% end %>
</div>
<div class='form-container'>
  <%= form_with model: @dish_option, 
                url: @dish_option.persisted? ? dish_dish_option_path(@dish, @dish_option) : dish_dish_options_path(@dish), 
                local: true do |f| %>
    <div class='form-group'>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class='form-group'>
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>
    <div>
      <%= f.submit class: 'submit-button' %>
    </div>
  <% end %>
</div>
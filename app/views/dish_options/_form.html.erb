<div class='form-container'>
  <%= form_with model: [@dish, @dish_option] do |f| %>        
    <div>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div>
      <%= f.label :price %>
      <%= f.text_field :price, value: number_to_currency(@dish_option.price) %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
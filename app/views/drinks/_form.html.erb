<div class='form-container'>
  <%= form_with model: @drink, url: @drink.persisted? ? drink_path(@drink) : drinks_path, local: true do |f| %>
    <div class='form-group'>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class='form-group'>
      <%= f.label :calories %>
      <%= f.text_field :calories %>
    </div>
    <div class='form-group'>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class='form-group'>
      <%= f.label :is_alcoholic %>
      <%= f.select :is_alcoholic, Drink.is_alcoholics.keys.map { |key| [key.humanize, key] } %>
    </div> 
    <div class='form-group'>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
    <div>
      <%= f.submit class: 'submit-button' %>
    </div>
  <% end %>
</div>
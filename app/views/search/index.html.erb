<% if @drinks.present? %>
  <ul>
    <% @drinks.each do |drink| %>
      <li><%= link_to drink.name, establishment_drink_path(@establishment.id, drink.id) %></li>

      <%= link_to "Edit #{drink.name}", edit_establishment_drink_path(@establishment.id, drink.id) %>
    <% end %>
  </ul>
<% else %>
  <p>Drink not found</p>
<% end %>


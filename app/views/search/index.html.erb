<h2>Results found: <%= @dishes.count %></h2>

<% if @dishes.present? %>
  <ul>
    <% @dishes.each do |dish| %>
      <li><%= link_to dish.name, establishment_dish_path(@establishment.id, dish.id) %></li>

      <%= link_to "Edit #{dish.name}", edit_establishment_dish_path(@establishment.id, dish.id) %>
    <% end %>
  </ul>
<% else %>
  <p>Dish not found</p>
<% end %>


<% if @dishes.present? %>
  <h1 class='title'>Results found: <%= @dishes.count %></h1>

  <ul>
    <% @dishes.each do |dish| %>
      <li>
        <%= link_to dish.name, dish_path(dish.id) %>

        <%= link_to 'Edit', edit_dish_path(dish.id), 
                          id: dom_id(dish, :edit) %>
      </li>
    <% end %>
  </ul>
<% elsif @drinks.present? %>
  <h1 class='title'>Results found: <%= @drinks.count %></h1>

  <ul>
    <% @drinks.each do |drink| %>
      <li>
        <%= link_to drink.name, drink_path(drink.id) %>

        <%= link_to 'Edit', edit_drink_path(drink.id), 
                          id: dom_id(drink, :edit) %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No results found</p>
<% end %>


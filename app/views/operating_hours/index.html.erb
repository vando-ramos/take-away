<h2>Operating Hours</h2>

<div><%= link_to 'Register Operating Hour', new_establishment_operating_hour_path %></div>

<section class='operating-hours'>
  <% if @operating_hours.any? %>
    <ul>
      <% @operating_hours.each do |oh| %>
        <li>
          <h3 class='day'>
            <%= link_to oh.day_of_week.humanize, establishment_operating_hour_path(@establishment.id, oh.id) %>
          </h3>
          <p><%= oh.opening_time.strftime("%H:%M") %> - <%= oh.closing_time.strftime("%H:%M") %></p>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>There is no operating hours registered</p>
  <% end %>
</section>


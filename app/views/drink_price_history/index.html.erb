<h2>Price History</h2>

<% grouped_histories = @drink_price_histories.group_by(&:item_id) %>

<% grouped_histories.each do |item_id, histories| %>

  <% drink_option = @drink_options[item_id] %>
  <hr>
  <h3><%= drink_option.description %></h3>
  
  <% histories.each do |history| %>
    <p>R$<%= history.price %></p>

    De: <%= history.start_date.strftime("%d/%m/%Y %H:%M") %><br>
    At√©: <%= history.end_date.strftime("%d/%m/%Y %H:%M") %>
  <% end %>
  <hr>
<% end %>
<h1 class='title'><%= link_to @establishment.corporate_name, establishment_path(@establishment.id) %></h1>

<% if current_user.admin? %>
  <h2><%= link_to 'Tags', establishment_tags_path(@establishment.id) %></h2>
<% end %>
<hr>

<h2>Operating Hours</h2>

<% if current_user.admin? %>
  <div><%= link_to 'Register Operating Hour', new_establishment_operating_hour_path(@establishment.id) %></div>
<% end %>

<div class='table-container'>
  <% if @operating_hours.any? %>
    <table>
      <thead>      
        <tr>
          <th>Day of week</th>
          <th>Operating Hour</th>
          <th>Status</th>
        </tr>           
      </thead>
      <tbody>
        <% @operating_hours.each do |oh| %>
          <tr>
            <td>
              <%= link_to oh.day_of_week.humanize, 
                  establishment_operating_hour_path(@establishment.id, oh.id) %>
            </td>
            <td>
              <%= oh.opening_time.strftime("%H:%M") %> - <%= oh.closing_time.strftime("%H:%M") %>
            </td>
            <td><%= oh.status.humanize %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>There is no operating hours registered</p>
  <% end %>
</div>
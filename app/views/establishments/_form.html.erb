<%= form_with model: @establishment do |f| %>
  <div>
    <%= f.label :corporate_name %>
    <%= f.text_field :corporate_name %>
  </div>
  <div>
    <%= f.label :brand_name %>
    <%= f.text_field :brand_name %>
  </div>
  <div>
    <%= f.label :cnpj %>
    <%= f.text_field :cnpj %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>
  <div>
    <%= f.label :neighborhood %>
    <%= f.text_field :neighborhood %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, placeholder: '00000000', pattern: "[0-9]*", inputmode: "numeric",
                      maxlength: 9, title: 'Only numbers are allowed' %>
  </div>
  <div>
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, placeholder: '00000000000', pattern: "[0-9]*", inputmode: "numeric",
                      maxlength: 11, title: 'Only numbers are allowed' %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.submit 'Save' %>
  </div>
<% end %>

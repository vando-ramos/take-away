<div class='form-container'>
  <%= form_with model: [@establishment, @drink, @option], 
      url: establishment_drink_drink_options_path(@establishment, @drink) do |f| %>
    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :price %>
      <%= f.number_field :price, step: 0.01, value: number_to_currency(f.object.price, unit: "", 
                          separator: ",", delimiter: ".") %>
    </div>
    <div>
      <%= f.submit %>
    </div>
  <% end %>
</div>
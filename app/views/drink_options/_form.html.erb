<div class='form-container'>
  <%= form_with model: [@drink, @drink_option] do |f| %>
    <div class='form-group'>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class='form-group'>
      <%= f.label :price %>
      <%= f.text_field :price, value: number_to_currency(@drink_option.price) %>
    </div>
    <div>
      <%= f.submit class: 'submit-button' %>
    </div>
  <% end %>
</div>
<div class='form-container'>
  <%= form_with model: @drink_option, 
                url: @drink_option.persisted? ? drink_drink_option_path(@drink, @drink_option) : drink_drink_options_path(@drink), 
                local: true do |f| %>
    <div class='form-group'>
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>
    <div class='form-group'>
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>
    <div>
      <%= f.submit class: 'submit-button' %>
    </div>
  <% end %>
</div>